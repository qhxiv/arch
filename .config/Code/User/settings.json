{
  "[css]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[html]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[javascript]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[javascriptreact]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[json]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[jsonc]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[scss]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[typescript]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[typescriptreact]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[vue]": { "editor.defaultFormatter": "Vue.volar" },
  "breadcrumbs.enabled": false,
  "editor.bracketPairColorization.enabled": false,
  "editor.cursorBlinking": "solid",
  "editor.fontFamily": "RobotoMono Nerd Font",
  "editor.formatOnSave": true,
  "editor.guides.indentation": false,
  "editor.lineNumbers": "relative",
  "editor.linkedEditing": true,
  "editor.minimap.enabled": false,
  "editor.occurrencesHighlight": "off",
  "editor.quickSuggestions": {
    "strings": "on"
  },
  "editor.renderLineHighlight": "none",
  "editor.scrollBeyondLastLine": false,
  "editor.stickyScroll.enabled": false,
  "editor.tabSize": 2,
  "emmet.includeLanguages": {
    "javascript": "javascriptreact",
    "typescript": "typescriptreact"
  },
  "explorer.compactFolders": false,
  "explorer.sortOrder": "type",
  "extensions.experimental.affinity": {
    "vscodevim.vim": 1
  },
  "git.openRepositoryInParentFolders": "never",
  "gitlens.launchpad.indicator.enabled": false,
  "headwind.runOnSave": true,
  "html.format.enable": false,
  "java.completion.matchCase": "off",
  // ONLY ENABLE THIS SETTING WHEN WORKING WITH TailwindCSS project
  // "files.associations": { "*.css": "tailwindcss" },
  "javascript.suggest.paths": false,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "redhat.telemetry.enabled": false,
  "search.smartCase": true,
  "security.workspace.trust.untrustedFiles": "open",
  "tailwindCSS.emmetCompletions": true,
  "tailwindCSS.includeLanguages": {
    "css": "css",
    "html": "html",
    "javascript": "javascript"
  },
  "terminal.integrated.enableMultiLinePasteWarning": "never",
  "terminal.integrated.gpuAcceleration": "off",
  "typescript.suggest.paths": false,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "window.commandCenter": false,
  "window.customTitleBarVisibility": "auto",
  "window.menuBarVisibility": "hidden",
  "window.title": "${rootName}",
  "workbench.activityBar.location": "top",
  "workbench.colorCustomizations": {
    "[Mellow]": {
      "quickInput.background": "#101010",
      "quickInput.foreground": "#888888",
      "quickInputList.focusBackground": "#101010",
      "quickInputList.focusForeground": "#ffffff",
      "list.hoverBackground": "#0000",
      "list.hoverForeground": "#aaaaaa",
      "editor.background": "#101010",
      "editorGroupHeader.tabsBackground": "#0a0a0a",
      "sideBar.border": "#0000",
      "sideBar.background": "#0a0a0a",
      "sideBar.foreground": "#aaaaaa",
      "sideBarSectionHeader.border": "#0000",
      "sideBarSectionHeader.background": "#0a0a0a",
      "sideBarSectionHeader.foreground": "#aaaaaa",
      "statusBar.background": "#191919",
      "statusBar.border": "#0000",
      "statusBar.foreground": "#aaaaaa",
      "statusBarItem.remoteBackground": "#191919",
      "tab.hoverBackground": "#0000",
      "tab.hoverForeground": "#fff",
      "tab.activeBackground": "#0a0a0a",
      "tab.activeBorder": "#0000",
      "tab.activeBorderTop": "#aaa",
      "tab.activeForeground": "#fff",
      "tab.border": "#0000",
      "tab.inactiveBackground": "#0a0a0a",
      "terminal.background": "#090909",
      "panel.background": "#090909",
      "panel.border": "#090909",
      "panelTitle.activeForeground": "#fff",
      "panelTitle.inactiveForeground": "#888",
      "panelTitle.activeBorder": "#0000",
      "titleBar.activeBackground": "#0a0a0a",
      "titleBar.inactiveBackground": "#0a0a0a"
    }
  },
  "workbench.colorTheme": "Mellow",
  "workbench.editor.centeredLayoutFixedWidth": true,
  "workbench.layoutControl.enabled": false,
  "workbench.sideBar.location": "right",
  "workbench.startupEditor": "newUntitledFile",

  // Vim
  "vim.useSystemClipboard": true,
  "vim.hlsearch": true,
  "vim.leader": " ",
  "vim.highlightedyank.enable": true,
  "vim.sneak": true,

  "vim.normalModeKeyBindingsNonRecursive": [
    // Remap j, k to gj, gk
    { "before": ["j"], "after": ["g", "j"] },
    { "before": ["k"], "after": ["g", "k"] },

    // Remap vim sneak to 'z' key
    { "before": ["z"], "after": ["s"] },
    { "before": ["Z"], "after": ["S"] },
    { "before": ["s"], "after": ["c", "l"] },

    // Buffers
    { "before": ["<S-h>"], "commands": [":bprevious"] },
    { "before": ["<S-l>"], "commands": [":bnext"] },

    // Splits
    { "before": ["leader", "v"], "commands": [":vsplit"] },
    { "before": ["leader", "s"], "commands": [":split"] },

    // Panes
    {
      "before": ["C-h"],
      "commands": ["workbench.action.focusLeftGroup"]
    },
    {
      "before": ["<C-j>"],
      "commands": ["workbench.action.focusBelowGroup"]
    },
    {
      "before": ["<C-k>"],
      "commands": ["workbench.action.focusAboveGroup"]
    },
    {
      "before": ["<C-l>"],
      "commands": ["workbench.action.focusRightGroup"]
    },

    // Turn off search highlighting
    { "before": ["<Esc>"], "commands": [":nohl"] },

    // Move cursor to the first and last character in the line
    { "before": ["leader", "h"], "after": ["^"] },
    { "before": ["leader", "l"], "after": ["$"] },

    // LSP
    {
      "before": ["leader", "c", "a"],
      "commands": ["editor.action.quickFix"]
    },
    {
      "before": ["leader", "r", "n"],
      "commands": ["editor.action.rename"]
    },
    {
      "before": ["[", "d"],
      "commands": ["editor.action.marker.prev"]
    },
    {
      "before": ["]", "d"],
      "commands": ["editor.action.marker.next"]
    },

    // Telescope
    {
      "before": ["leader", "f", "f"],
      "commands": ["workbench.action.quickOpen"]
    },
    {
      "before": ["leader", "f", "g"],
      "commands": ["workbench.action.findInFiles"]
    },

    // Harpoon
    {
      "before": ["m", "s"],
      "commands": ["vscode-harpoon.addEditor"]
    },
    {
      "before": ["m", "e"],
      "commands": ["vscode-harpoon.editEditors"]
    },
    {
      "before": ["m", "l"],
      "commands": ["vscode-harpoon.editorQuickPick"]
    },
    {
      "before": ["m", "1"],
      "commands": ["vscode-harpoon.gotoEditor1"]
    },
    {
      "before": ["m", "2"],
      "commands": ["vscode-harpoon.gotoEditor2"]
    },
    {
      "before": ["m", "3"],
      "commands": ["vscode-harpoon.gotoEditor3"]
    },
    {
      "before": ["m", "4"],
      "commands": ["vscode-harpoon.gotoEditor4"]
    },
    {
      "before": ["m", "5"],
      "commands": ["vscode-harpoon.gotoEditor5"]
    },

    // Misc
    {
      "before": ["leader", "f", "m"],
      "commands": ["editor.action.formatDocument"]
    },
    {
      "before": ["leader", "t", "w"],
      "commands": ["editor.action.toggleWordWrap"]
    },
    { "before": ["leader", "w"], "commands": [":w!"] },
    { "before": ["leader", "q"], "commands": [":q!"] },
    { "before": ["leader", "x"], "commands": [":x!"] }
  ],

  "vim.visualModeKeyBindings": [
    { "before": ["leader", "h"], "after": ["^"] },
    { "before": ["leader", "l"], "after": ["$"] },

    // Stay in visual mode while indenting
    { "before": ["<"], "commands": ["editor.action.outdentLines"] },
    { "before": [">"], "commands": ["editor.action.indentLines"] },

    // Move selected lines while staying in visual mode
    { "before": ["J"], "commands": ["editor.action.moveLinesDownAction"] },
    { "before": ["K"], "commands": ["editor.action.moveLinesUpAction"] }
  ],

  // paste without overriding the current register
  "vim.visualModeKeyBindingsNonRecursive": [
    {
      "before": ["p"],
      "after": ["p", "g", "v", "y"]
    }
  ]
}
