# volume
XF86Audio{RaiseVolume,LowerVolume,Mute}
  amixer set Master {5%+,5%-,toggle} > /dev/null; \
  pkill -RTMIN+2 dwmblocks

# brightness
XF86MonBrightness{Up,Down}
  brightnessctl s {+10%,10%-} > /dev/null

# screenshot
Print
 flameshot gui > /dev/null

# restart sxhkd and dwmblocks
alt + Escape
  pkill sxhkd; sxhkd; \
  pkill dwmblocks; dwmblocks

# change input method
alt + i
  [[ $(ibus engine) = "Bamboo" ]] && ibus engine xkb:us::eng || ibus engine Bamboo

# Applications shortcut
alt + c
  code

alt + d
  dmenu_run

alt + e
  thunar

alt + s
  powermenu

alt + w
  brave

alt + shift + b
  $TERMINAL -e bluetui

alt + shift + w
  $TERMINAL -e nmtui

alt + m
  $TERMINAL --class cmus -e cmus
